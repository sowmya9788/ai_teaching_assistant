# OpenAI API Key (optional - can use HuggingFace models instead)
OPENAI_API_KEY=your_openai_api_key_here

# HuggingFace Model (alternative to OpenAI)
HF_MODEL_NAME=sentence-transformers/all-MiniLM-L6-v2

# Vector Database Configuration
VECTOR_DB_TYPE=faiss  # Options: faiss, chroma
CHROMA_PERSIST_DIRECTORY=./data/chroma

# Document Processing
CHUNK_SIZE=500
CHUNK_OVERLAP=50
MAX_DOCUMENTS=10

# RAG Configuration
TOP_K_RETRIEVAL=5
MAX_TOKENS=1000
TEMPERATURE=0.1
